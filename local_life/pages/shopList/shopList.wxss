/* pages/shopList/shopList.wxss */
.shop-item{
	display: flex;
	padding: 10rpx;
	border:1rpx solid #efefef ;
	border-radius: 10rpx;
	margin: 10rpx;
	box-shadow: 1rpx 1rpx 8rpx #ddd;
}
.thumb image{
	width: 250rpx;
	height:250rpx;
	display: block;
	margin-right: 15rpx;
}
.info{
	display: flex;
	flex-direction: column;/* 纵向布局 */
	justify-content: space-around;
	font-size: 24rpx;
}
.shop-title{
	font-weight: bold;
}
